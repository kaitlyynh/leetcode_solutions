class Solution(object):
    def longestConsecutive(self, nums):
        """
        :type nums: List[int]
        :rtype: int
        """
        nums = set(nums)
        streak = 0
        for num in nums:
            if (num - 1) not in nums:
                temp = 0
                while (num + temp) in nums:
                    temp += 1
                streak = max(streak, temp)
        return streak
